@{
    ViewBag.Title = "ScanOrderCompound";
}
<link href="~/Content/fcss.css" rel="stylesheet" />
<div class="row">
    <div class="col-sm-6">
        <h2 class="pageheading">Scan individual samples</h2>
    </div>
</div>
<br />
<div class="row">
    <div class="col-sm-6">
        <form class="form-horizontal">
            <div class="form-group">
                <label for="inputPassword" class="col-sm-4 control-label">Compound Name:</label>
                <div class="col-sm-8">
                    <input class="form-control" id="disabledInput" type="text" placeholder="Floral Potasium" disabled>
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword" class="col-sm-4 control-label">Arrival Date:</label>
                <div class="col-sm-8">
                    <input class="form-control" id="disabledInput" type="text" placeholder="1/1/2016" disabled>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">Milligrams of compound:</label>
                <div class="col-sm-8">
                    <input class="form-control" id="focusedInput" type="text" value="">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">Apperance of compound:</label>
                <div class="col-sm-8">
                    <input class="form-control" id="focusedInput" type="text" value="">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">Molecular mass of compound:</label>
                <div class="col-sm-8">
                    <input class="form-control" id="focusedInput" type="text" value="">
                </div>
            </div>
        </form>
    </div>
    <div class="col-sm-offset-3 col-sm-3 fBorder2">
        <p class="fMarginTop10">Compound 1 - 2/2</p>
        <p>Compound 2 - 1/1</p>
        <p>Compound 3 - 2/3</p>
    </div>
</div>
<div class="row">
    <div class="col-sm-offset-10 col-sm-2">
        <button type="button" class="btn btn-primary">Back</button>
        @Html.ActionLink("Next", "ScanOrderSummary", "Home", null, new { @class = " btn btn-primary" })
    </div>
</div>
